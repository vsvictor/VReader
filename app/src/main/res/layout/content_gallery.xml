<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vreader.GalleryActivity"
    tools:showIn="@layout/activity_gallery">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llDirectory"
            android:background="@color/light_black"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large">
            <fragment
                android:id="@+id/frDirectory"
                android:layout_gravity="center_vertical"
                android:name="com.vreader.fragments.HeaderFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llFiles"
            android:layout_below="@id/llDirectory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
